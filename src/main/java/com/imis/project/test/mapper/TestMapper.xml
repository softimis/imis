<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imis.project.test.dao.TestDao">
    <sql id="mapWhereClause">
        <if test="param.username != null and '' != param.username"> and tb.username like concat('%',#{param.username},'%')</if>
        <!--<if test="username != null and '' != username"> and tb.username = #{username}</if>-->
    </sql>

    <select id="pageQuery" parameterType="java.util.Map" resultType="com.imis.project.test.entity.TestEntity">
      select tb.username as username,
             tb.password as password,
             tb.birthday as birthday,
             tb.sex as sex,
             tb.openstate as openstate,
      <include refid="BaseMapper.getListClause"></include>
      from TB_TestEntity tb where tb.status = 1
      <include refid="mapWhereClause"></include>
      order by tb.updatedate,tb.updatetime
    </select>

    <delete id="batchDelete" parameterType="java.util.List">
      delete from tb_testEntity where id in
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="remove" parameterType="com.imis.project.test.entity.TestEntity">
      update TB_TestEntity set
             updatedate = #{updateDate},
             updatetime = #{updateTime},
             status = #{status}
      where id = #{id}
    </update>
</mapper>